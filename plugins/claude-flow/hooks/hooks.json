{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh",
        "timeout": 15000
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/guard-branch-check.sh",
        "timeout": 5000
      },
      {
        "matcher": "Bash(git commit:*)",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/guard-story-exists.sh",
        "timeout": 5000
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/post-edit-format.sh",
        "timeout": 30000
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-save.sh",
        "timeout": 10000
      }
    ]
  }
}
